<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">
            
            <bean id= "myperson" class="springDemo.Person">
            <property name="age" value="24"></property>
            <property name="name" value="Manjeet"></property>         
            </bean>
            
            
            <bean id="emp" class="springDemo.Employee">
            <constructor-arg name="salary" value="50000"> </constructor-arg>  
            <constructor-arg name="degn" value="Soft Deg"></constructor-arg>      
            
            
            </bean>
</beans>